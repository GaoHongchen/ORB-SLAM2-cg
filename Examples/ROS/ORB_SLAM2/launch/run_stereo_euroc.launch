<?xml version="1.0"?>

<launch>

  <arg name="rviz" default="false"/>

  <group if="$(arg rviz)">
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find ORB_SLAM2)/rviz/orbslam.rviz"/>
  </group>

  <arg name="orbvoc" default="$(find ORB_SLAM2)/../../../Vocabulary/ORBvoc.txt" />
  <arg name="config" default="$(find ORB_SLAM2)/../../Stereo/EuRoC.yaml" />

  <node name="orbslam2_rgbd" pkg="ORB_SLAM2" type="Stereo" args="$(arg orbvoc) $(arg config) true">
    <remap from="/camera/left/image_raw"  to="/cam0/image_raw" />
    <remap from="/camera/right/image_raw" to="/cam1/image_raw" />
  </node>

</launch>
